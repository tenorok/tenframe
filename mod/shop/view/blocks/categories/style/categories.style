.mod-shop-categories {
    
}
    .mod-shop-categories__add {
        margin-left: -18px;
        padding-left: 18px;

        color: #3232FF;
        background: url(/mod/shop/view/blocks/categories/images/plus.png) 0 4px no-repeat;
    }

    .mod-shop-categories__h2 {
        margin: 40px 0 20px;
        font: normal 17px georgia, serif;
    }
    
    @mod_admin_categories__item_margin_top_bottom: 15px;

    .mod-shop-categories__mainlist {

    }
    .mod-shop-categories__list {
        margin-top: @mod_admin_categories__item_margin_top_bottom;
        margin-bottom: @mod_admin_categories__item_margin_top_bottom;
    }
        .mod-shop-categories__list ul {
            margin-left: 30px;
        }
        .mod-shop-categories__item {
            margin-bottom: @mod_admin_categories__item_margin_top_bottom;
        }
            .mod-shop-categories__name {
                
                margin-left: -20px;

                &:hover .mod-shop-categories__draggable {
                    opacity: 1;
                }
            }
                .mod-shop-categories__draggable {
                    opacity: 0;
                    display: inline-block;
                    width: 16px;
                    height: 16px;

                    background: url(/mod/shop/view/blocks/categories/images/draggable.png) no-repeat;
                    vertical-align: bottom;
                    cursor: url(/mod/shop/view/blocks/categories/images/openhand.cur), move;

                    .transition(opacity);
                }
                .mod-shop-categories__cat {
                    border-bottom: 1px dotted #3232FF;
                    color: #3232FF;
                    text-decoration: none;
                    outline: none;

                    &:hover {
                        border-bottom-color: #f00;
                    }
                }
                .mod-shop-categories__cat_hided {
                    color: #777;
                    border-bottom-color: #aaa;
                }
                .mod-shop-categories__harr {
                    opacity: 0.3;
                    display: inline-block;
                    width: 25px;

                    color: #3232FF;
                    font-size: 10px;
                    text-align: center;
                    text-decoration: none;
                    cursor: pointer;

                    &:hover {
                        color: #f00;
                    }
                }

.mod-shop-categories__dropdown {
    position: absolute;

    display: none;

    background: #fff;
    .box-shadow(#C4C4C4, 0 2px 9px rgba(0, 0, 0, 0.6));

    font-size: 12px;

    &:after {
        position: absolute;
        left: 6px;
        top: -12px;
        content: url("data:image/png;base64,");
    }
}
    .mod-shop-categories__dropdown-item {
        
    }
        
        @mod_admin_categories_dropdown__menu_color: #333;

        .mod-shop-categories__dropdown-menu {
            display: block;
            padding: 4px 8px;

            text-decoration: none;
            color: @mod_admin_categories_dropdown__menu_color;

            &:hover {
                color: @mod_admin_categories_dropdown__menu_color;
                .gradient(#D6D6D6, #C4C4C4, #EAEAEA);
            }
        }